#include <iostream>

int main() {
    double num1, num2;
    char op;

    // Get user input
    std::cout << "Enter first number: ";
    std::cin >> num1;
    std::cout << "Enter an operator (+, -, *, /): ";
    std::cin >> op;
    std::cout << "Enter second number: ";
    std::cin >> num2;

    // Perform arithmetic operation using mathematical expressions
    double result = (op == '+') * (num1 + num2) +
                    (op == '-') * (num1 - num2) +
                    (op == '*') * (num1 * num2) +
                    (op == '/') * (num1 / num2);

    // Display result
    std::cout << "Result: " << result << std::endl;

    return 0;
}
